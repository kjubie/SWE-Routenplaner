<UserControl x:Class="SWEN2_TourPlanner.View.TourDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN2_TourPlanner.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Content="{Binding selectedTour.Name}"-->


    <StackPanel>

        <Label Content="{Binding SelectedTour.Name, Mode=OneWay}" FontSize="24" FontWeight="Bold" ></Label>
        <Label Content="{Binding SelectedTour.FormatedFromTo, Mode=OneWay}" FontWeight="Bold"></Label >
        <Label Content="{Binding SelectedTour.FormatedTime, Mode=OneWay}"></Label>
        <Label Content="{Binding SelectedTour.FormatedDistance, Mode=OneWay}"></Label>

        <Label FontWeight="Bold">Description</Label>
        <ScrollViewer Margin="5" VerticalScrollBarVisibility="Auto" Height="100">

            <TextBlock  Text="{Binding SelectedTour.Description}"  Width="Auto" TextWrapping="Wrap" Height="Auto">

            </TextBlock>
        </ScrollViewer>
    </StackPanel>

</UserControl>
