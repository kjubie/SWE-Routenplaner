<Window x:Class="SWEN2_TourPlanner.View.CreateTour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWEN2_TourPlanner.View"
        mc:Ignorable="d"
        Title="CreateTour" Height="450" Width="400">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="LightGray"></Setter>
            <Setter Property="Width" Value="100"></Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="LightGray"></Setter>

        </Style>


    </Window.Resources>
    <Grid>
        <StackPanel Margin ="15" >
            <Label FontSize="25" FontWeight="Bold">
                Tour
            </Label>
            <Border BorderThickness="0 0 0 1" Background="Black" BorderBrush ="Black"></Border>
            <Label>
                From*
            </Label>
            <TextBox x:Name="From"></TextBox>
            <Label>
                To*
            </Label>
            <TextBox x:Name="To"></TextBox>
            <Label>
                Mean of transport
            </Label>
            <ComboBox x:Name="MeanOfTransport">
                <ComboBoxItem IsSelected="True">By Foot</ComboBoxItem>
                <ComboBoxItem>bicycle</ComboBoxItem>
                <ComboBoxItem>car</ComboBoxItem>
                <ComboBoxItem>Public Transport</ComboBoxItem>
            </ComboBox>

            <Label>
                Tour name*
            </Label>
            <TextBox x:Name="TourName"></TextBox>
            <Label>
                Description
            </Label>
            <TextBox x:Name="Description" Height="100"></TextBox>
            <DockPanel Margin="0 5 0 5">
                <Button DockPanel.Dock="Left">Import...</Button>
                <Button Click="CloseWindow" DockPanel.Dock="Right">Cancel</Button>
                <Button Click="SaveTour" DockPanel.Dock="Right">Save</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
